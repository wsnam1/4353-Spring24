@model Project.Models.FuelQuoteViewModel


<form method="post" asp-action="Index">
    <div class="container mt-4">
        <div class="row">
            <div class="col">
                <h1 class="text-primary">Fuel Quote Form</h1>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <input asp-for="FuelHistory.GallonsRequested" class="form-control" placeholder="Gallons Requested" type="number" name="gallonsRequested" tabindex="1" required autofocus>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <input class="form-control" type="text" value="@Model.UserProfile.Address1" tabindex="2" readonly>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <input asp-for="FuelHistory.DeliveryDate" class="form-control" placeholder="Delivery Date" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" name="deliveryDate" tabindex="3">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <input placeholder="Suggested Price per gallon" class="form-control" type="number" name="suggestedPrice" tabindex="4" readonly><!-- Price will be calculated by Pricing Module -->
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <input placeholder="Total Amount Due" class="form-control" type="number" name="totalAmountDue" tabindex="5" readonly><!-- Calculated (gallons * price) -->
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-6">
                <button type="submit" class="btn btn-primary btn-block form-control ">Submit</button>
            </div>
            <div class="col-6 py-2">
                
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary form-control">Back</a>
            </div>
        </div>
    </div>
</form>




